@model prog_practice.Models.Claim

<h2 style="text-align:center; color:black;">Claim Verification</h2>
<hr />

<div style="max-width:700px; margin:auto; background:#f9f9f9; border-radius:15px; padding:25px; box-shadow:0 4px 10px rgba(0,0,0,0.1); font-family:Arial, sans-serif;">
    <p><strong>Claim ID:</strong> @Model.ClaimID</p>
    <p><strong>Title:</strong> @Model.Title</p>
    <p><strong>Month:</strong> @Model.Month</p>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Total Amount:</strong> @("R" + Model.Amount.ToString("0.00"))</p>
    <p><strong>Status:</strong> <span style="color:orange;">@Model.Status</span></p>

    @if (!string.IsNullOrEmpty(Model.DocumentPath))
    {
        <p><strong>Document:</strong> <a href="@Model.DocumentPath" target="_blank">View Document</a></p>
    }

    <form asp-action="VerifyClaim" asp-controller="Coordinator" method="post">
        <input type="hidden" name="id" value="@Model.ClaimID" />
        <div style="text-align:center; margin-top:20px;">
            <button type="submit" name="actionType" value="Approve" style="background:green; color:white; padding:10px 20px; border-radius:10px; border:none;">Approve</button>
            <button type="submit" name="actionType" value="Reject" style="background:red; color:white; padding:10px 20px; border-radius:10px; border:none;">Reject</button>
            <a href="/Coordinator/Dashboard" style="background:#6c757d; color:white; padding:10px 20px; border-radius:10px; text-decoration:none;">Back</a>
        </div>
    </form>
</div>
<a href="/Coordinator/Dashboard"
   style="background:#6c757d; color:white; padding:10px 20px; border-radius:10px; text-decoration:none;">Back to Dashboard</a>




           