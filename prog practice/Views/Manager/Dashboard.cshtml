<!-- Claim Summary -->
<div style="display:flex; flex-wrap:wrap; gap:25px; justify-content:center; margin-bottom:20px;">
    <div style="flex:1; min-width:260px; background:#f9f9f9; border-radius:15px; padding:20px;
                box-shadow:0 4px 10px rgba(0,0,0,0.1);">
        <h4 style="color:#007bff;">Claim Summary</h4>
        <p><strong>Total Approved:</strong> @ViewBag.TotalApproved</p>
        <p><strong>Pending Processing:</strong> @ViewBag.PendingProcessing</p>
        <p><strong>Processed:</strong> @ViewBag.Processed</p>
    </div>

    <!-- Recent Activity -->
    <div style="flex:1; min-width:260px; background:#f9f9f9; border-radius:15px; padding:20px;
                box-shadow:0 4px 10px rgba(0,0,0,0.1);">
        <h4 style="color:#007bff;">Recent Activity</h4>
        <ul style="list-style:none; padding:0; margin:0;">
            @if (ViewBag.RecentActivity != null && ((List<prog_practice.Models.ClaimHistory>)ViewBag.RecentActivity).Count > 0)
            {
                foreach (var h in (List<prog_practice.Models.ClaimHistory>)ViewBag.RecentActivity)
                {
                    var claimTitle = h.Claim != null ? h.Claim.Title : "Unknown Claim";
                    <li style="margin-bottom:10px; border-bottom:1px solid #eee; padding-bottom:5px;">
                        <strong>Claim #@h.ClaimID — @claimTitle</strong><br />
                        <span>@h.Action</span><br />
                        <small style="color:gray;">by @h.PerformedBy on @h.Timestamp.ToString("yyyy-MM-dd HH:mm")</small>
                    </li>
                }
            }
            else
            {
                <li style="color:gray;">No recent activity available.</li>
            }
        </ul>
    </div>
</div>

<!-- Uploaded Documents -->
<div style="margin-top:18px;background:#f9f9f9;border-radius:15px;padding:20px;
            box-shadow:0 4px 10px rgba(0,0,0,0.1);">
    <h4 style="color:black;">Uploaded Documents</h4>
    <ul>
        @foreach (var c in Model.Where(c => !string.IsNullOrEmpty(c.DocumentPath)))
        {
            <li><a href="@c.DocumentPath" target="_blank">@System.IO.Path.GetFileName(c.DocumentPath)</a></li>
        }
    </ul>
</div>

<!-- Approved Claims Table -->
<div style="max-width:900px; margin:auto; background:#f9f9f9; border-radius:15px; padding:20px;
            box-shadow:0 4px 10px rgba(0,0,0,0.1); font-family:Arial, sans-serif;">
    <h4 style="color:black; text-align:center;">Approved Claims for Processing</h4>

    @if (!Model.Any())
    {
        <p style="text-align:center; color:gray;">No approved claims available.</p>
    }
    else
    {
        <table style="width:100%; border-collapse:collapse; text-align:center;">
            <thead style="background:#007bff; color:white;">
                <tr>
                    <th style="padding:8px;">ID</th>
                    <th style="padding:8px;">Title</th>
                    <th style="padding:8px;">Lecturer</th>
                    <th style="padding:8px;">Month</th>
                    <th style="padding:8px;">Amount</th>
                    <th style="padding:8px;">Status</th>
                    <th style="padding:8px;">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in Model)
                {
                    var color = claim.Status == "Processed" ? "green" : "orange";
                    <tr style="border-bottom:1px solid #eee;">
                        <td style="padding:8px;">@claim.ClaimID</td>
                        <td style="padding:8px;">@claim.Title</td>
                        <td style="padding:8px;">@claim.LecturerName</td>
                        <td style="padding:8px;">@claim.Month</td>
                        <td style="padding:8px;">@(claim.Amount.ToString("0.00"))</td>
                        <td style="padding:8px; color:@color; font-weight:bold;">@claim.Status</td>
                        <td style="padding:8px;">
                            @if (claim.Status == "Approved")
                            {
                                <a href="/Manager/VerifyClaim/@claim.ClaimID"
                                   style="background:#28a745; color:white; padding:6px 10px; border-radius:8px; text-decoration:none;">
                                    Process
                                </a>
                            }
                            else
                            {
                                <span style="color:gray;">—</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

