@model IEnumerable<prog_practice.Models.ClaimHistory>

<h2 style="text-align:center; color:black;">Claim Activity History</h2>
<hr />

<div style="max-width:900px; margin:auto; background:#f9f9f9;
            border-radius:15px; padding:20px;
            box-shadow:0 4px 10px rgba(0,0,0,0.1);
            font-family:Arial, sans-serif;">

    <table style="width:100%; border-collapse:collapse;">
        <tr style="background:#007bff; color:white;">
            <th>Claim ID</th>
            <th>Action</th>
            <th>Performed By</th>
            <th>Date & Time</th>
        </tr>

        @foreach (var h in Model)
        {
            <tr style="text-align:center; border-bottom:1px solid #eee;">
                <td>@h.ClaimID</td>
                <td>@h.Action</td>
                <td>@h.PerformedBy</td>
                <td>@h.Timestamp.ToString("dd MMM yyyy HH:mm")</td>
            </tr>
        }
    </table>

    <div style="text-align:center; margin-top:20px;">
        <a href="/Manager/Dashboard"
           style="background:#6c757d; color:white; padding:10px 20px; border-radius:10px; text-decoration:none;">
            ← Back to Dashboard
        </a>
    </div>
</div>


