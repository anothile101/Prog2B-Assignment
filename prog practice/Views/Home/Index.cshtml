@model prog_practice.Models.Login

@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5" style="max-width: 400px;">
    <div class="text-center mb-4">
        <h2 class="fw-bold">Welcome again!</h2>
        <p class="text-muted">Log in to view your dashboard</p>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-4">
            <h4 class="card-title mb-4 text-center">Login</h4>

            <form asp-action="Login" method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="UserEmail" class="form-label"></label>
                    <input asp-for="UserEmail" class="form-control" placeholder="Enter your email" />
                    <span asp-validation-for="UserEmail" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control" placeholder="Enter your password" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">Login</button>
            </form>
        </div>
    </div>

    <div class="text-center mt-3">
        <small class="text-muted">For assistance, please reach out to your administrator.</small>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}