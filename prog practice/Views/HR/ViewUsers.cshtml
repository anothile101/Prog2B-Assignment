@model IEnumerable<prog_practice.Models.User>

@{
    ViewData["Title"] = "View Users";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4>All Users</h4>
        <a asp-action="CreateUser" class="btn btn-primary">Add New User</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped align-middle">
                    <thead class="table-primary">
                        <tr>
                            <th>#ID</th>
                            <th>Full Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Contact Number</th>
                            <th>Hourly Rate</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.UserID</td>
                                <td>@user.FullName</td>
                                <td>@user.UserEmail</td>
                                <td>@user.UserRole?.RoleName</td>
                                <td>@user.ContactNumber</td>
                                <td>@user.HourlyRate.ToString("C")</td>
                                <td>
                                    <a asp-action="EditUser" asp-route-id="@user.UserID" class="btn btn-sm btn-outline-primary">Edit</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>