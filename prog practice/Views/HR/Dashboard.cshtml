@{
    ViewData["Title"] = "HR Dashboard";
}

<div class="container mt-4">

    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-2">
        <h4 class="mb-0">Welcome, HR</h4>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item active" aria-current="page">HR Dashboard</li>
            </ol>
        </nav>
    </div>

    <!-- Quick Access Buttons -->
    <div class="card shadow-sm rounded-3 mb-4">
        <div class="card-body">
            <h4 class="card-title mb-3 text-dark">Quick Access</h4>
            <div class="d-flex flex-wrap gap-3">
                <a asp-action="CreateUser" class="btn btn-primary">Add New User</a>
                <a asp-action="ViewUsers" class="btn btn-primary">View All Users</a>
                <a asp-action="Reports" class="btn btn-primary">Generate Reports</a>
            </div>
        </div>
    </div>


    <!-- Recent Users Table -->
    <div class="card shadow-sm rounded-3">
        <div class="card-body">
            <h4 class="card-title mb-3 text-dark">Recent Users Added</h4>
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Contact</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.RecentUsers != null)
                        {
                            foreach (var user in ViewBag.RecentUsers as List<prog_practice.Models.User>)
                            {
                                <tr>
                                    <td>@user.FullName</td>
                                    <td>@user.UserEmail</td>
                                    <td>@user.UserRole?.RoleName</td>
                                    <td>@user.ContactNumber</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center text-muted">No recent users added.</td>
                            </tr>
                        }
                        @if ((ViewBag.RecentUsers as List<prog_practice.Models.User>)?.Count == 0)
                        {
                            <tr>
                                <td colspan="4" class="text-center text-muted">No recent users added.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.js"></script>
}