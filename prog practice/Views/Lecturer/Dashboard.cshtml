<div style="display:flex; gap:20px; justify-content:center; flex-wrap:wrap;">
    <div style="flex:1; min-width:260px; background:#f9f9f9; border-radius:15px; padding:20px; box-shadow:0 4px 10px rgba(0,0,0,0.1);">
        <h4 style="color:black;">Claim Summary</h4>
        <p>Total: @ViewBag.TotalClaims</p>
        <p>Pending: @ViewBag.Pending</p>
        <p>Approved: @ViewBag.Approved</p>
        <p>Rejected: @ViewBag.Rejected</p>
    </div>

    <div style="flex:1; min-width:260px; background:#f9f9f9; border-radius:15px; padding:20px; box-shadow:0 4px 10px rgba(0,0,0,0.1);">
        <h4 style="color:black;">Recent Activity</h4>
        <ul>
            @foreach (var c in (IEnumerable<prog_practice.Models.Claim>)ViewBag.RecentClaims)
            {
                var color = c.Status == "Approved" ? "green" : (c.Status == "Rejected" ? "red" : "orange");
                <li>Claim #@c.ClaimID — <span style="color:@color;">@c.Status</span></li>
            }
        </ul>
    </div>
</div>
